<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.pacmanroyale.Activities.MainActivity$PlaceholderFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/container_skills"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:tabBackground="@drawable/tab_bar_background"
        style="@style/MyTheme">

        <android.support.design.widget.TabItem
            android:id="@+id/pacmanSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/pacman_right1" />

        <android.support.design.widget.TabItem
            android:id="@+id/ghostSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ghost" />

    </android.support.design.widget.TabLayout>


</android.support.constraint.ConstraintLayout>