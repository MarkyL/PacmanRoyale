<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/skillButton"
        android:gravity="center"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/skillButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@color/com_facebook_blue"
        android:text="INVISIBILITY"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/skillDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="44dp"
        android:layout_toStartOf="@+id/skillCoolDown"
        android:text="Duration: 3s"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/skillCoolDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/skillDuration"
        android:layout_alignBottom="@+id/skillDuration"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="71dp"
        android:text="Cooldown: 9s"
        android:textStyle="bold|italic" />

</RelativeLayout>
