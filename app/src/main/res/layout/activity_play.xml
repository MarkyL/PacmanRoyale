<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.pacmanroyale.Activities.PlayActivity"
    android:background="@color/mark_red">


    <ImageView
        android:id="@+id/play_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ghost" />

    <LinearLayout
        android:id="@+id/middleSurface"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="invisible">

    </LinearLayout>

    <Button
        android:id="@+id/GoInvisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="38dp"
        android:onClick="goInvisible"
        android:text="Go Invisible"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/invisibleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/GoInvisible"
        android:layout_alignStart="@+id/middleSurface"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="113dp"
        android:visibility="invisible"
        android:text="Invisible Time" />


</RelativeLayout>
