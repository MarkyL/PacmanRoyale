<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pacmanSkillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/winRatioTextView"
        android:layout_below="@+id/winRatioTextView"
        android:layout_marginTop="43dp"
        android:text="Invisibility" />

    <TextView
        android:id="@+id/winsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="73dp"
        android:text="Wins :" />

    <TextView
        android:id="@+id/pacmanNumWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gamesTextView"
        android:layout_toEndOf="@+id/winsTextView" />

    <TextView
        android:id="@+id/gamesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/winsTextView"
        android:layout_below="@+id/winsTextView"
        android:text="Total Games :" />

    <TextView
        android:id="@+id/pacmanNumGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gamesTextView"
        android:layout_alignBottom="@+id/gamesTextView"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/winRatioTextView" />

    <TextView
        android:id="@+id/winRatioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gamesTextView"
        android:layout_below="@+id/gamesTextView"
        android:text="Win Ratio:" />

    <TextView
        android:id="@+id/pacmanWinRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamesTextView"
        android:layout_toEndOf="@+id/winRatioTextView" />


</RelativeLayout>